---
import LayoutMinimal from "../../layouts/LayoutMinimal.astro";
import IntroModal from "../../components/IntroModal.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("log"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<LayoutMinimal title="Writing | Ryan Eberhard" description="Build diary and thoughts on product, growth, and the operator life">
  <header class="header">
    <div class="header__inner">
      <a href="/" class="header__logo">Ryan Eberhard</a>
      <button class="dark-toggle" id="theme-toggle">
        [<span id="theme-label">dark</span>]
      </button>
    </div>
    <nav class="header__nav">
      <a href="/">home</a>
      <span class="header__nav-sep">·</span>
      <a href="/experience">experience</a>
      <span class="header__nav-sep">·</span>
      <a href="/services">services</a>
      <span class="header__nav-sep">·</span>
      <a href="/log" class="active">writing</a>
      <span class="header__nav-sep">·</span>
      <a href="mailto:eberhard@gaugesgreen.com">contact</a>
    </nav>
  </header>

  <h2>Writing</h2>
  <p class="intro">
    Notes on building products, growing companies, and the operator life.
  </p>
  <p class="note">Weekly posts starting Feb 7, 2026</p>

  <hr />

  {posts.length === 0 ? (
    <p class="intro">No posts yet. Check back soon.</p>
  ) : (
    posts.map((post) => (
      <a href={`/log/${post.slug}`} class="post-link">
        <div class="post-link__header">
          <span class="post-link__title">{post.data.title}</span>
          <span class="post-link__date">{formatDate(post.data.date)}</span>
        </div>
        <p class="post-link__desc">{post.data.description}</p>
      </a>
    ))
  )}

  <footer class="footer">
    <a href="mailto:eberhard@gaugesgreen.com">email</a>
    <span class="header__nav-sep">·</span>
    <a href="https://linkedin.com/in/eberhard" target="_blank" rel="noopener noreferrer">linkedin</a>
    <span class="header__nav-sep">·</span>
    <a href="/schedule">book a call</a>
    <span class="header__nav-sep">·</span>
    <button class="intro-trigger footer-btn">make intro</button>
  </footer>

  <IntroModal />
</LayoutMinimal>

<style>
  .footer-btn {
    background: none;
    border: none;
    font-family: inherit;
    font-size: inherit;
    color: var(--dim);
    cursor: pointer;
    padding: 0;
  }
  .footer-btn:hover {
    color: var(--text);
  }
</style>
