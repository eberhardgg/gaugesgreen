---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("log"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<Layout title="Log | Gauges Green" description="Build diary and thoughts on product, growth, and the operator life">
  <main class="min-h-screen bg-white dark:bg-[#0a0a0a]">
    <!-- Hero -->
    <section class="pt-12 pb-16 px-6 md:px-8 max-w-2xl mx-auto">
      <h1 class="text-3xl font-semibold text-gray-900 dark:text-white mb-4">
        Logbook
      </h1>
      <p class="text-base text-gray-600 dark:text-gray-400 leading-relaxed">
        Notes on building products, growing companies, and the operator life.
      </p>
      <p class="mt-4 text-sm text-gray-500 dark:text-gray-500 italic">
        Weekly posts starting Feb 7, 2026
      </p>
    </section>

    <!-- Posts -->
    <section class="pb-12 px-6 md:px-8 max-w-2xl mx-auto">
      {posts.length === 0 ? (
        <p class="text-base text-gray-500 dark:text-gray-500">
          No posts yet. Check back soon.
        </p>
      ) : (
        <div class="space-y-4">
          {posts.map((post) => (
            <a href={`/log/${post.slug}`} class="block p-6 border border-gray-200 dark:border-gray-800 hover:border-primary dark:hover:border-primary transition-colors">
              <div class="flex items-center gap-3 mb-1">
                <p class="font-semibold text-gray-900 dark:text-white">
                  {post.data.title}
                </p>
                <span class="text-sm text-gray-500 dark:text-gray-500">
                  {formatDate(post.data.date)}
                </span>
              </div>
              <p class="text-base text-gray-600 dark:text-gray-400">
                {post.data.description}
              </p>
            </a>
          ))}
        </div>
      )}
    </section>
  </main>
</Layout>
