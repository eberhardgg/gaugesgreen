---
import LayoutMinimal from "../layouts/LayoutMinimal.astro";
import IntroModal from "../components/IntroModal.astro";

const meetings = [
  {
    id: "15",
    title: "Quick question",
    minutes: 15,
    url: "https://cal.com/ryan-eberhard-6jsjkn/15min",
  },
  {
    id: "30",
    title: "Introduction or catch-up",
    minutes: 30,
    url: "https://cal.com/ryan-eberhard-6jsjkn/30min",
  },
  {
    id: "45",
    title: "Focused discussion",
    minutes: 45,
    url: "https://cal.com/ryan-eberhard-6jsjkn/45-min-meeting",
  },
  {
    id: "60",
    title: "IRL or working session",
    minutes: 60,
    url: "https://cal.com/ryan-eberhard-6jsjkn/60-min-meeting",
  },
];
---

<LayoutMinimal title="Schedule | Ryan Eberhard" description="Book time with Ryan Eberhard">
  <header class="header">
    <div class="header__inner">
      <a href="/" class="header__logo"><img src="/gauges-green-g-core.svg" alt="" class="header__mark" />Ryan Eberhard</a>
    </div>
    <nav class="header__nav">
      <a href="/">home</a>
      <span class="header__nav-sep">·</span>
      <a href="/experience">experience</a>
      <span class="header__nav-sep">·</span>
      <a href="/services">services</a>
      <span class="header__nav-sep">·</span>
      <a href="/log">writing</a>
      <span class="header__nav-sep">·</span>
      <a href="mailto:eberhard@gaugesgreen.com">contact</a>
    </nav>
  </header>

  <section class="schedule">
    <h2 class="schedule__title">Book a call</h2>
    <p class="schedule__intro">Select a duration</p>

    <div class="options">
      {meetings.map((meeting) => (
        <a
          href={meeting.url}
          target="_blank"
          rel="noopener noreferrer"
          class="option"
        >
          <div class="option__content">
            <span class="option__title">{meeting.title} →</span>
            <span class="option__desc">{meeting.minutes} min</span>
          </div>
          <div class="option__bar" style={`--bar-width: ${(meeting.minutes / 60) * 96}px`}></div>
        </a>
      ))}
    </div>
  </section>

  <footer class="footer">
    <a href="mailto:eberhard@gaugesgreen.com">email</a>
    <span class="header__nav-sep">·</span>
    <a href="https://linkedin.com/in/eberhard" target="_blank" rel="noopener noreferrer">linkedin</a>
    <span class="header__nav-sep">·</span>
    <button class="intro-trigger footer-btn">make intro</button>
  </footer>

  <IntroModal />
</LayoutMinimal>

<style>
  .schedule {
    --brg: #2d8b57;
  }

  .schedule__title {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.03em;
    margin: 0 0 0.25em 0;
  }

  .schedule__intro {
    font-size: var(--font-size-small);
    color: var(--dim);
    margin: 0 0 1.5em 0;
  }

  .options {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .option {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 1em 0;
    background: transparent;
    border-bottom: 1px solid var(--border);
    text-decoration: none;
    transition: background 0.15s ease, transform 0.15s ease;
  }

  .option:first-child {
    border-top: 1px solid var(--border);
  }

  .option:hover {
    background: rgba(212, 165, 154, 0.12);
    transform: translateX(4px);
  }

  .option:hover .option__title {
    color: var(--accent);
  }

  .option:hover .option__bar {
    background: var(--brg);
    transform: scaleX(1.15);
    transform-origin: right;
  }

  .option:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: -2px;
  }

  .option__bar {
    flex-shrink: 0;
    width: var(--bar-width);
    height: 4px;
    background: var(--dim);
    border-radius: 2px;
    transition: background 0.15s ease, transform 0.15s ease;
  }

  .option__content {
    display: flex;
    flex-direction: column;
    gap: 0.25em;
  }

  .option__title {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--text);
    transition: color 0.15s ease;
  }

  .option__desc {
    font-size: var(--font-size-small);
    color: var(--dim);
  }

  @media (max-width: 600px) {
    .option {
      padding: 1.25em 0;
    }
  }

  .footer-btn {
    background: none;
    border: none;
    font-family: inherit;
    font-size: inherit;
    color: var(--dim);
    cursor: pointer;
    padding: 0;
  }
  .footer-btn:hover {
    color: var(--text);
  }
</style>
