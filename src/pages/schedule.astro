---
import LayoutMinimal from "../layouts/LayoutMinimal.astro";

const meetings = [
  {
    id: "15",
    title: "15 minutes",
    description: "Quick intro or follow-up",
    minutes: 15,
    url: "https://cal.com/ryan-eberhard-6jsjkn/15min",
  },
  {
    id: "30",
    title: "30 minutes",
    description: "Discovery call or focused discussion",
    minutes: 30,
    url: "https://cal.com/ryan-eberhard-6jsjkn/30min",
    default: true,
  },
  {
    id: "45",
    title: "45 minutes",
    description: "Deep dive on a specific topic",
    minutes: 45,
    url: "https://cal.com/ryan-eberhard-6jsjkn/45-min-meeting",
  },
  {
    id: "60",
    title: "60 minutes",
    description: "Working session",
    minutes: 60,
    url: "https://cal.com/ryan-eberhard-6jsjkn/60-min-meeting",
  },
];
---

<LayoutMinimal title="Schedule | Ryan Eberhard" description="Book time with Ryan Eberhard">
  <header class="header">
    <div class="header__inner">
      <a href="/" class="header__logo">Ryan Eberhard</a>
      <button class="dark-toggle" id="theme-toggle">
        [<span id="theme-label">dark</span>]
      </button>
    </div>
    <nav class="header__nav">
      <a href="/">home</a>
      <span class="header__nav-sep">·</span>
      <a href="/experience">experience</a>
      <span class="header__nav-sep">·</span>
      <a href="/services">services</a>
      <span class="header__nav-sep">·</span>
      <a href="/log">writing</a>
      <span class="header__nav-sep">·</span>
      <a href="mailto:eberhard@gaugesgreen.com">contact</a>
    </nav>
  </header>

  <section class="schedule">
    <h2 class="schedule__title">Book a call</h2>
    <p class="schedule__intro">Select a duration</p>

    <div class="options" role="radiogroup" aria-label="Meeting duration">
      {meetings.map((meeting) => (
        <button
          type="button"
          class={`option ${meeting.default ? 'option--default' : ''}`}
          data-id={meeting.id}
          data-url={meeting.url}
          data-title={meeting.title}
          data-minutes={meeting.minutes}
          role="radio"
          aria-checked={meeting.default ? "true" : "false"}
        >
          <div class="option__content">
            <span class="option__title">{meeting.title}</span>
            <span class="option__desc">{meeting.description}</span>
          </div>
          <div class="option__bar" style={`--bar-width: ${(meeting.minutes / 60) * 96}px`}></div>
        </button>
      ))}
    </div>

    <div class="action" id="action-area">
      <a href="#" id="book-btn" class="book-btn" target="_blank" rel="noopener noreferrer">
        Book <span id="selected-duration">30 minutes</span> →
      </a>
    </div>
  </section>

  <footer class="footer">
    <a href="mailto:eberhard@gaugesgreen.com">email</a>
    <span class="header__nav-sep">·</span>
    <a href="https://linkedin.com/in/eberhard" target="_blank" rel="noopener noreferrer">linkedin</a>
  </footer>
</LayoutMinimal>

<style>
  .schedule__title {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.03em;
    margin: 0 0 0.25em 0;
  }

  .schedule__intro {
    font-size: var(--font-size-small);
    color: var(--dim);
    margin: 0 0 1.5em 0;
  }

  .options {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .option {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 1em 0;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--border);
    cursor: pointer;
    text-align: left;
    font-family: inherit;
    transition: background 0.15s ease, transform 0.15s ease;
    position: relative;
  }

  .option:first-child {
    border-top: 1px solid var(--border);
  }

  .option:hover {
    background: rgba(212, 165, 154, 0.12);
    transform: translateX(4px);
  }

  .option:hover .option__title {
    color: var(--accent);
  }

  .option:hover .option__bar {
    background: var(--accent);
    transform: scaleX(1.1);
    transform-origin: right;
  }

  .option:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: -2px;
  }

  .option[aria-checked="true"] {
    background: rgba(212, 165, 154, 0.08);
  }

  .option[aria-checked="true"] .option__title {
    color: var(--accent);
  }

  .option[aria-checked="true"] .option__bar {
    background: var(--accent);
  }

  .option__content {
    display: flex;
    flex-direction: column;
    gap: 0.25em;
  }

  .option__title {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--text);
    transition: color 0.15s ease;
  }

  .option__desc {
    font-size: var(--font-size-small);
    color: var(--dim);
  }

  .option__bar {
    width: var(--bar-width);
    height: 4px;
    background: var(--dim);
    border-radius: 2px;
    transition: background 0.15s ease, transform 0.15s ease;
  }

  .option[aria-checked="true"] .option__bar {
    background: var(--accent);
  }

  .action {
    margin-top: 2em;
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .action.hidden {
    opacity: 0;
    transform: translateY(-8px);
    pointer-events: none;
  }

  .book-btn {
    display: inline-block;
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
    padding: 0.75em 0;
    transition: color 0.15s ease;
  }

  .book-btn:hover {
    color: var(--accent-hover);
  }

  @media (max-width: 600px) {
    .option {
      padding: 1.25em 0;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const options = document.querySelectorAll('.option');
    const bookBtn = document.getElementById('book-btn');
    const selectedDuration = document.getElementById('selected-duration');
    const actionArea = document.getElementById('action-area');

    // Initialize with default selection
    const defaultOption = document.querySelector('.option--default');
    if (defaultOption) {
      selectOption(defaultOption);
    }

    options.forEach(option => {
      option.addEventListener('click', () => {
        selectOption(option);
      });
    });

    function selectOption(option) {
      // Update aria states
      options.forEach(o => o.setAttribute('aria-checked', 'false'));
      option.setAttribute('aria-checked', 'true');

      // Update button
      const url = option.dataset.url;
      const title = option.dataset.title;

      bookBtn.href = url;
      selectedDuration.textContent = title;

      // Show action area
      actionArea.classList.remove('hidden');
    }
  });
</script>
