---
import LayoutMinimal from "../layouts/LayoutMinimal.astro";

const meetings = [
  {
    title: "15 Min Meeting",
    description: "Quick intro or follow-up",
    duration: "15m",
    url: "https://cal.com/ryan-eberhard-6jsjkn/15min",
  },
  {
    title: "30 Min Meeting",
    description: "Discovery call or focused discussion",
    duration: "30m",
    url: "https://cal.com/ryan-eberhard-6jsjkn/30min",
  },
  {
    title: "45 Min Meeting",
    description: "Deep dive on a specific topic",
    duration: "45m",
    url: "https://cal.com/ryan-eberhard-6jsjkn/45-min-meeting",
  },
  {
    title: "60 Min Meeting",
    description: "Comprehensive working session",
    duration: "60m",
    url: "https://cal.com/ryan-eberhard-6jsjkn/60-min-meeting",
  },
];
---

<LayoutMinimal title="Schedule | Ryan Eberhard" description="Book time with Ryan Eberhard">
  <header class="header">
    <div class="header__inner">
      <a href="/" class="header__logo">Ryan Eberhard</a>
      <button class="dark-toggle" id="theme-toggle">
        [<span id="theme-label">dark</span>]
      </button>
    </div>
    <nav class="header__nav">
      <a href="/">home</a>
      <span class="header__nav-sep">·</span>
      <a href="/experience">experience</a>
      <span class="header__nav-sep">·</span>
      <a href="/services">services</a>
      <span class="header__nav-sep">·</span>
      <a href="/log">writing</a>
      <span class="header__nav-sep">·</span>
      <a href="mailto:eberhard@gaugesgreen.com">contact</a>
    </nav>
  </header>

  <section class="section">
    <h2 class="section__title">Schedule</h2>
    <p class="section__intro">
      Pick a time that works. All times shown in your local timezone.
    </p>

    {meetings.map((meeting) => (
      <article class="item">
        <h3 class="item__title">
          <a href={meeting.url} target="_blank" rel="noopener noreferrer">
            {meeting.title}
          </a>
        </h3>
        <p class="item__meta">{meeting.duration}</p>
        <p class="item__body">{meeting.description}</p>
      </article>
    ))}
  </section>

  <footer class="footer">
    <a href="mailto:eberhard@gaugesgreen.com">email</a>
    <span class="header__nav-sep">·</span>
    <a href="https://linkedin.com/in/eberhard" target="_blank" rel="noopener noreferrer">linkedin</a>
  </footer>
</LayoutMinimal>

<style>
  .section__title {
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    margin: 0 0 1em 0;
  }

  .section__intro {
    color: var(--text-secondary);
    margin-bottom: 2em;
  }

  .item {
    margin-bottom: 2em;
  }

  .item:last-child {
    margin-bottom: 0;
  }

  .item__title {
    font-size: var(--font-size-base);
    font-weight: 600;
    letter-spacing: -0.01em;
    margin: 0 0 0.25em 0;
  }

  .item__title a {
    color: var(--text);
    text-decoration: none;
  }

  .item__title a:hover {
    color: var(--accent);
  }

  .item__meta {
    font-size: var(--font-size-small);
    color: var(--dim);
    font-style: italic;
    margin: 0 0 0.5em 0;
  }

  .item__body {
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.7;
  }
</style>
