---
import LayoutMinimal from "../layouts/LayoutMinimal.astro";
import IntroModal from "../components/IntroModal.astro";
import { getCollection } from "astro:content";

const caseStudies = (await getCollection("portfolio"))
  .sort((a, b) => a.data.order - b.data.order);
---

<LayoutMinimal title="Experience | Ryan Eberhard" description="Case studies from ZipRecruiter, JobGet, Swing, and more">
  <header class="header">
    <div class="header__inner">
      <a href="/" class="header__logo"><img src="/gauges-green-g-core.svg" alt="" class="header__mark" />Ryan Eberhard</a>
    </div>
    <nav class="header__nav">
      <a href="/">home</a>
      <span class="header__nav-sep">·</span>
      <a href="/experience" class="active">experience</a>
      <span class="header__nav-sep">·</span>
      <a href="/services">services</a>
      <span class="header__nav-sep">·</span>
      <a href="/log">writing</a>
      <span class="header__nav-sep">·</span>
      <a href="mailto:eberhard@gaugesgreen.com">contact</a>
    </nav>
  </header>


  {caseStudies.map((study, index) => (
    <>
      <article class="role">
        <header class="role__header">
          <h2 class="role__company">{study.data.company}</h2>
          <p class="role__meta">{study.data.role} · {study.data.period}</p>
        </header>
        <p class="role__situation">{study.data.challenge}</p>
        <p class="role__outcome">{study.data.outcome}</p>
        <p class="role__metric">
          <span class="metric__value">{study.data.heroMetric}</span>
          <span class="metric__label">{study.data.heroMetricLabel.toLowerCase()}</span>
        </p>
      </article>
      {index < caseStudies.length - 1 && <hr />}
    </>
  ))}

  <footer class="footer">
    <a href="mailto:eberhard@gaugesgreen.com">email</a>
    <span class="header__nav-sep">·</span>
    <a href="https://linkedin.com/in/eberhard" target="_blank" rel="noopener noreferrer">linkedin</a>
    <span class="header__nav-sep">·</span>
    <a href="/schedule">book a call</a>
    <span class="header__nav-sep">·</span>
    <button class="intro-trigger footer-btn">make intro</button>
  </footer>

  <IntroModal />
</LayoutMinimal>

<style>
  /* Entry blocks with generous breathing room */
  .role {
    margin: 0;
  }

  /* Company name anchors each entry */
  .role__header {
    margin-bottom: 1.75em;
  }

  .role__company {
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    margin: 0 0 0.25em 0;
  }

  /* Role and dates - meta text style */
  .role__meta {
    font-size: var(--font-size-small);
    margin: 0;
    font-weight: 400;
    font-style: italic;
    color: var(--dim);
  }

  /* Situation: the "before" state */
  .role__situation {
    font-size: var(--font-size-small);
    margin-bottom: 1.5em;
    line-height: 1.7;
  }

  /* Outcome: the transformation - full visual weight */
  .role__outcome {
    margin-bottom: 2em;
    line-height: 1.7;
  }

  /* Metric: the proof point - demands attention */
  .role__metric {
    margin: 0;
    padding-top: 0.5em;
  }

  .metric__value {
    font-size: 2.5rem;
    font-weight: 600;
    letter-spacing: -0.075em;
    line-height: 1.1;
    color: var(--accent);
  }

  .metric__label {
    display: block;
    font-size: var(--font-size-small);
    margin-top: 0.25em;
    font-style: italic;
    color: var(--dim);
  }

  /* Generous whitespace between entries */
  hr {
    margin: 4em 0;
  }

  .footer-btn {
    background: none;
    border: none;
    font-family: inherit;
    font-size: inherit;
    color: var(--dim);
    cursor: pointer;
    padding: 0;
  }
  .footer-btn:hover {
    color: var(--text);
  }
</style>
