---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const caseStudies = (await getCollection("portfolio"))
  .sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Experience | Gauges Green" description="Case studies from ZipRecruiter, JobGet, Swing, and more">
  <main class="min-h-screen bg-white dark:bg-[#0a0a0a]">
    <!-- Hero -->
    <section class="pt-12 pb-16 px-6 md:px-8 max-w-2xl mx-auto">
      <h1 class="text-3xl md:text-4xl text-gray-900 dark:text-white mb-4" data-i18n="portfolio_title">
        Experience
      </h1>
      <p class="text-base text-gray-600 dark:text-gray-400 leading-relaxed" data-i18n="portfolio_intro">
        A track record of building products that scaleâ€”and fixing ones that stalled.
      </p>
    </section>

    <!-- Case Studies -->
    <section class="pb-12 px-6 md:px-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        {caseStudies.map((study) => (
          <div class="p-6 border border-gray-200 dark:border-gray-800">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
                    {study.data.company}
                  </h2>
                  <span class="text-sm text-gray-500 dark:text-gray-500">
                    {study.data.period}
                  </span>
                </div>
                <p class="text-sm text-primary mb-3">{study.data.role}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {study.data.challenge}
                </p>
              </div>
              <div class="text-right flex-shrink-0">
                <div class="text-3xl font-bold text-gray-900 dark:text-white">
                  {study.data.heroMetric}
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-500">
                  {study.data.heroMetricLabel}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>
