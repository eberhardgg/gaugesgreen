---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { ArrowRight } from "lucide-astro";

const caseStudies = (await getCollection("portfolio"))
  .sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Portfolio | Gauges Green" description="Case studies from ZipRecruiter, JobGet, Swing, and more">
  <main class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300">
    <!-- Hero -->
    <section class="py-10 px-4 md:px-8 max-w-3xl mx-auto">
      <h1 class="text-2xl text-gray-900 dark:text-white mb-4" data-i18n="portfolio_title">
        Portfolio
      </h1>
      <p class="text-sm text-gray-600 dark:text-gray-400 max-w-2xl leading-relaxed" data-i18n="portfolio_intro">
        A track record of building products that scaleâ€”and fixing ones that stalled.
      </p>
    </section>

    <!-- Case Studies -->
    <section class="pb-10 px-4 md:px-8 max-w-3xl mx-auto">
      <div class="space-y-4">
        {caseStudies.map((study) => (
          <a
            href={`/portfolio/${study.slug}`}
            class="block p-6 border border-gray-200 dark:border-gray-800 hover:border-primary dark:hover:border-primary transition-colors group"
          >
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                    {study.data.company}
                  </h2>
                  <span class="text-sm text-gray-500 dark:text-gray-500">
                    {study.data.period}
                  </span>
                </div>
                <p class="text-sm text-primary mb-3">{study.data.role}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                  {study.data.challenge}
                </p>
                <div class="flex items-center gap-2 text-sm font-medium text-primary">
                  <span data-i18n="portfolio_read_case">Read case study</span>
                  <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
                </div>
              </div>
              <div class="text-right flex-shrink-0">
                <div class="text-3xl font-bold text-gray-900 dark:text-white">
                  {study.data.heroMetric}
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-500">
                  {study.data.heroMetricLabel}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
</Layout>
