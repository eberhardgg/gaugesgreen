    <div>
      <!-- Page title -->
      <section class="animate" style="margin-bottom: 64px;">
        <h1 class="text-xl font-medium text-black dark:text-white" data-i18n="contact_title">Contact</h1>
      </section>

      <!-- Contact info -->
      <section class="animate">
        <div>
          <p class="font-medium text-black dark:text-white" style="margin-bottom: 8px;">Ryan Eberhard</p>
          <p style="margin-bottom: 8px;">
            <a href="mailto:eberhard@gaugesgreen.com" class="hover:text-black dark:hover:text-white transition-colors">
              eberhard@gaugesgreen.com
            </a>
          </p>
          <p style="margin-bottom: 8px;">
            <a href="https://linkedin.com/in/eberhard" target="_blank" class="hover:text-black dark:hover:text-white transition-colors">
              LinkedIn
            </a>
          </p>
          <p class="text-neutral-400 dark:text-neutral-500" data-i18n="location">Mexico City Â· Los Angeles</p>
