---
import Layout from "../layouts/Layout.astro";
import { EXPERIENCE } from "../config";
import { MapPin, Plane } from "lucide-astro";
import IntroButton from "../components/IntroButton.astro";
---

<Layout>
  <main class="min-h-screen bg-white dark:bg-[#0a0a0a]">
    <!-- Hero -->
    <section class="pt-12 md:pt-16 pb-16 px-6 md:px-10 lg:px-16 max-w-4xl mx-auto">
      <div class="flex flex-col sm:flex-row sm:items-center gap-6 mb-10">
        <img
          src="/perfil.jpg"
          alt="Ryan Eberhard"
          class="w-24 h-24 md:w-28 md:h-28 rounded-full object-cover ring-4 ring-gray-100 dark:ring-gray-800"
        />
        <div>
          <h1 class="text-4xl md:text-5xl font-semibold text-gray-900 dark:text-white tracking-tight">
            Ryan Eberhard
          </h1>
          <p class="mt-2 text-lg text-gray-500 dark:text-gray-400">
            I make the gauges green.
          </p>
        </div>
      </div>

      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl">
        Former CPO at ZipRecruiter (grew to 100K customers, $900M rev). Now offering transformative leadership sprints for venture-backed companies out of Mexico City.
      </p>

      <div class="flex flex-wrap items-center gap-4 mt-10">
        <a
          href="https://cal.com/ryan-eberhard-6jsjkn/30min"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-6 py-3 text-[15px] font-medium rounded-lg bg-gray-900 dark:bg-white text-white dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors"
        >
          Book a call
        </a>
        <IntroButton />
      </div>
    </section>

    <!-- Locations -->
    <section class="py-12 md:py-16 px-6 md:px-10 lg:px-16 max-w-4xl mx-auto">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8">
        Where I Work
      </h2>

      <div class="grid sm:grid-cols-2 gap-4">
        <div class="flex items-center gap-4 p-5 rounded-xl bg-gray-50 dark:bg-gray-900/50">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800">
            <MapPin class="w-5 h-5 text-gray-500 dark:text-gray-400" />
          </div>
          <div>
            <p class="font-medium text-gray-900 dark:text-white">Mexico City</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Primary base</p>
          </div>
        </div>
        <div class="flex items-center gap-4 p-5 rounded-xl bg-gray-50 dark:bg-gray-900/50">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800">
            <MapPin class="w-5 h-5 text-gray-500 dark:text-gray-400" />
          </div>
          <div>
            <p class="font-medium text-gray-900 dark:text-white">Los Angeles</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">US operations</p>
          </div>
        </div>
      </div>

      <p class="mt-10 text-base md:text-lg text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
        I moved to Mexico City because I believe LatAm is the next great tech frontier.
        A billion people online, most still doing business through WhatsApp and filing cabinets.
        The potential energy here is enormous.
      </p>
    </section>

    <!-- Career Timeline -->
    <section class="py-12 md:py-16 px-6 md:px-10 lg:px-16 max-w-4xl mx-auto">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-12">
        Career Journey
      </h2>

      <div class="space-y-10">
        {EXPERIENCE.map((job) => (
          <div class="relative pl-8 border-l-2 border-gray-200 dark:border-gray-800">
            <div class="absolute -left-[5px] top-1.5 w-2 h-2 rounded-full bg-gray-300 dark:bg-gray-700"></div>
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-2">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                {job.role}
              </h3>
              <span class="text-sm text-gray-400 dark:text-gray-500 tabular-nums">
                {job.startDate}–{job.endDate}
              </span>
            </div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-3">{job.company}</p>
            <p class="text-base text-gray-600 dark:text-gray-400 leading-relaxed">
              {job.description}
            </p>
          </div>
        ))}
      </div>
    </section>

    <!-- Beyond Work -->
    <section class="py-12 md:py-16 px-6 md:px-10 lg:px-16 max-w-4xl mx-auto">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8">
        Beyond Work
      </h2>

      <div class="grid sm:grid-cols-2 gap-4">
        <div class="p-6 rounded-xl bg-gray-50 dark:bg-gray-900/50">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800 mb-4">
            <Plane class="w-5 h-5 text-gray-500 dark:text-gray-400" />
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Aviation</h3>
          <p class="text-base text-gray-600 dark:text-gray-400 leading-relaxed">
            Private pilot. There's something clarifying about flight planning—it's all systems thinking and risk management.
          </p>
        </div>
        <div class="p-6 rounded-xl bg-gray-50 dark:bg-gray-900/50">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800 mb-4">
            <MapPin class="w-5 h-5 text-gray-500 dark:text-gray-400" />
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Winemaking</h3>
          <p class="text-base text-gray-600 dark:text-gray-400 leading-relaxed">
            Family vineyard in Santa Ynez. The craft of winemaking teaches patience—you can't rush a good vintage.
          </p>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 md:py-20 px-6 md:px-10 lg:px-16 max-w-4xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 dark:text-white mb-4">
        Let's talk
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-10 max-w-lg mx-auto">
        Whether you're facing a growth challenge or just want to connect, I'm always happy to chat.
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a
          href="https://cal.com/ryan-eberhard-6jsjkn/30min"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-6 py-3 text-[15px] font-medium rounded-lg bg-gray-900 dark:bg-white text-white dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors"
        >
          Book a call
        </a>
        <IntroButton />
      </div>
    </section>
  </main>
</Layout>
