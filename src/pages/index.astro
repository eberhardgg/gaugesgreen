---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { HOME } from "@consts";
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-8">
      <section class="animate">
        <p class="text-sm opacity-50" data-i18n="home_brand_line">Ryan Eberhard's product & growth practice</p>
      </section>

      <section class="animate">
        <h1 class="text-xl font-medium text-black dark:text-white leading-snug" data-i18n="tagline">
          Fractional Product & Growth Leadership for Scaling Startups
        </h1>
      </section>

      <section class="animate">
        <p class="text-sm">
          <a href="/services" class="text-black dark:text-white hover:opacity-60">services</a>
          <span class="mx-2 opacity-30">·</span>
          <a href="/products" class="text-black dark:text-white hover:opacity-60">products</a>
        </p>
      </section>

      <section class="animate pt-8">
        <div class="text-sm space-y-1">
          <p class="text-black dark:text-white">Ryan Eberhard</p>
          <p>
            <a href="mailto:eberhard@gaugesgreen.com" class="hover:text-black dark:hover:text-white">eberhard@gaugesgreen.com</a>
          </p>
          <p>
            <a href="https://linkedin.com/in/eberhard" target="_blank" class="hover:text-black dark:hover:text-white">linkedin.com/in/eberhard</a>
          </p>
          <p data-i18n="location">Mexico City · Los Angeles</p>
        </div>
      </section>
    </div>
  </Container>
</PageLayout>
