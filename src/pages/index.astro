---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { HOME } from "@consts";
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div>
      <!-- Tagline -->
      <section class="animate" style="margin-bottom: 64px;">
        <p class="text-neutral-400 dark:text-neutral-500" style="margin-bottom: 16px;" data-i18n="home_brand_line">
          Ryan Eberhard's product & growth practice
        </p>
        <h1 class="text-xl font-medium text-black dark:text-white" data-i18n="tagline">
          Fractional Product & Growth Leadership for Scaling Startups
        </h1>
      </section>

      <!-- Navigation links -->
      <section class="animate" style="margin-bottom: 64px;">
        <div>
          <a href="/services" class="block text-black dark:text-white hover:opacity-60 transition-opacity" style="margin-bottom: 12px;">
            <span data-i18n="home_services_title">Services</span>
            <span class="text-neutral-400 dark:text-neutral-500" style="margin-left: 8px;" aria-hidden="true">→</span>
          </a>
          <a href="/products" class="block text-black dark:text-white hover:opacity-60 transition-opacity">
            <span data-i18n="home_products_title">Products</span>
            <span class="text-neutral-400 dark:text-neutral-500" style="margin-left: 8px;" aria-hidden="true">→</span>
          </a>
        </div>
      </section>

      <!-- Contact -->
      <section class="animate">
        <div>
          <p class="font-medium text-black dark:text-white" style="margin-bottom: 8px;">Ryan Eberhard</p>
          <p style="margin-bottom: 8px;">
            <a href="mailto:eberhard@gaugesgreen.com" class="hover:text-black dark:hover:text-white transition-colors">
              eberhard@gaugesgreen.com
            </a>
          </p>
          <p style="margin-bottom: 8px;">
            <a href="https://linkedin.com/in/eberhard" target="_blank" class="hover:text-black dark:hover:text-white transition-colors">
              LinkedIn
            </a>
          </p>
          <p class="text-neutral-400 dark:text-neutral-500" data-i18n="location">Mexico City · Los Angeles</p>
        </div>
      </section>
    </div>
  </Container>
</PageLayout>
