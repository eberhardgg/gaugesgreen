  function setLang(lang) {
    localStorage.setItem("lang", lang);

    // Update button styles
    const enBtn = document.getElementById("lang-en");
    const esBtn = document.getElementById("lang-es");

    if (lang === "en") {
      enBtn.className = "px-1.5 py-0.5 text-gray-900 dark:text-white font-medium transition-colors";
      esBtn.className = "px-1.5 py-0.5 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-400 transition-colors";
    } else {
      enBtn.className = "px-1.5 py-0.5 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-400 transition-colors";
      esBtn.className = "px-1.5 py-0.5 text-gray-900 dark:text-white font-medium transition-colors";
    }

    // Update all translatable elements
    document.querySelectorAll("[data-i18n]").forEach(el => {
      const key = el.getAttribute("data-i18n");
      if (translations[lang][key]) {
        el.textContent = translations[lang][key];
      }
    });
  }

  // Initialize
  const savedLang = localStorage.getItem("lang") || "en";
  setLang(savedLang);

  document.getElementById("lang-en").addEventListener("click", () => setLang("en"));
  document.getElementById("lang-es").addEventListener("click", () => setLang("es"));
