---
import { Menu, X } from "lucide-astro";
import ThemeToggle from "../ThemeToggle.astro";
import LangToggle from "../LangToggle.astro";

const NAV_LINKS = [
  { href: "/", key: "nav_home", label: "Home" },
  { href: "/experience", key: "nav_experience", label: "Experience" },
  { href: "/advisory", key: "nav_services", label: "Services" },
  { href: "/log", key: "nav_log", label: "Logbook" },
  { href: "/metrics", key: "nav_metrics", label: "Metrics" },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 dark:bg-[#0a0a0a]/95 backdrop-blur-md">
  <div class="w-full px-6 md:px-10 lg:px-16 xl:px-20">
    <div class="flex items-center justify-between h-[68px]">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5 font-semibold text-lg text-gray-900 dark:text-white hover:text-primary transition-colors">
        <img src="/logos/gauges-green-mark.svg" alt="" class="h-5 w-auto" />
        Gauges Green
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-10">
        {NAV_LINKS.map((link) => (
          <a
            href={link.href}
            class:list={[
              "text-[15px] font-medium transition-colors",
              currentPath === link.href || (link.href !== "/" && currentPath.startsWith(link.href))
                ? "text-primary"
                : "text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white",
            ]}
            data-i18n={link.key}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Right side: toggles + mobile menu button -->
      <div class="flex items-center gap-5">
        <div class="hidden md:flex items-center gap-5">
          <LangToggle />
          <ThemeToggle />
        </div>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          aria-label="Toggle menu"
        >
          <Menu id="menu-icon" class="w-6 h-6 text-gray-700 dark:text-gray-300" />
          <X id="close-icon" class="w-6 h-6 text-gray-700 dark:text-gray-300 hidden" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white dark:bg-[#0a0a0a] border-t border-gray-100/50 dark:border-gray-800/50"
  >
    <nav class="px-6 md:px-10 py-4 space-y-1">
      {NAV_LINKS.map((link) => (
        <a
          href={link.href}
          class:list={[
            "block py-3 text-[15px] transition-colors",
            currentPath === link.href || (link.href !== "/" && currentPath.startsWith(link.href))
              ? "text-gray-900 dark:text-white"
              : "text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white",
          ]}
          data-i18n={link.key}
        >
          {link.label}
        </a>
      ))}
    </nav>
    <div class="flex items-center gap-4 px-6 md:px-10 py-4 border-t border-gray-100/50 dark:border-gray-800/50">
      <LangToggle />
      <ThemeToggle />
    </div>
  </div>
</header>

<!-- Spacer to prevent content from being hidden under fixed header -->
<div class="h-[68px]"></div>

<script is:inline>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");

  mobileMenuBtn?.addEventListener("click", () => {
    const isOpen = !mobileMenu?.classList.contains("hidden");

    if (isOpen) {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    } else {
      mobileMenu?.classList.remove("hidden");
      menuIcon?.classList.add("hidden");
      closeIcon?.classList.remove("hidden");
    }
  });

  // Close menu when clicking a link
  mobileMenu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    });
  });
</script>
