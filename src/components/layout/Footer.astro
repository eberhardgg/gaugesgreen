---
import { Mail, Linkedin } from "lucide-astro";
---

<footer class="border-t border-gray-100 dark:border-gray-900">
  <div class="max-w-2xl mx-auto px-6 md:px-8 py-12">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
      <!-- Brand -->
      <div>
        <a href="/" class="text-sm font-medium text-gray-900 dark:text-white">
          Gauges Green
        </a>
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-500">
          Fractional Product & Growth Leadership
        </p>
      </div>

      <!-- Links -->
      <nav class="flex items-center gap-6 text-xs text-gray-500 dark:text-gray-500">
        <a href="/experience" class="hover:text-gray-900 dark:hover:text-white transition-colors">Experience</a>
        <a href="/advisory" class="hover:text-gray-900 dark:hover:text-white transition-colors">Services</a>
        <a href="/log" class="hover:text-gray-900 dark:hover:text-white transition-colors">Logbook</a>
        <a href="/metrics" class="hover:text-gray-900 dark:hover:text-white transition-colors">Metrics</a>
      </nav>
    </div>

    <!-- Bottom row -->
    <div class="mt-8 pt-6 border-t border-gray-100 dark:border-gray-900 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <p class="text-xs text-gray-400 dark:text-gray-600">
        &copy; {new Date().getFullYear()} Gauges Green
      </p>
      <div class="flex items-center gap-4">
        <a
          href="mailto:eberhard@gaugesgreen.com"
          class="text-gray-400 dark:text-gray-600 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
          aria-label="Email"
        >
          <Mail class="w-4 h-4" />
        </a>
        <a
          href="https://linkedin.com/in/eberhard"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 dark:text-gray-600 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
          aria-label="LinkedIn"
        >
          <Linkedin class="w-4 h-4" />
        </a>
      </div>
    </div>
  </div>
</footer>
