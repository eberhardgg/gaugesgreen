---
import Container from "@components/Container.astro";
---

<footer style="padding: 64px 0;">
  <Container>
    <div>
      <div class="text-neutral-400 dark:text-neutral-500" style="margin-bottom: 16px;">
        <!-- Theme toggle: light / dark / green -->
        <button
          id="theme-light"
          class="hover:text-black dark:hover:text-white transition-colors"
          aria-label="Light theme"
        >
          light
        </button>
        <span style="margin: 0 8px;" aria-hidden="true">·</span>
        <button
          id="theme-dark"
          class="hover:text-black dark:hover:text-white transition-colors"
          aria-label="Dark theme"
        >
          dark
        </button>
        <span style="margin: 0 8px;" aria-hidden="true">·</span>
        <button
          id="theme-green"
          class="hover:text-black dark:hover:text-white transition-colors"
          aria-label="Green theme"
        >
          green
        </button>
        <span style="margin: 0 16px;" aria-hidden="true">|</span>
        <button
          id="lang-toggle"
          class="hover:text-black dark:hover:text-white transition-colors"
          aria-label="Toggle language"
        >
          <span id="lang-label">es</span>
        </button>
      </div>
      <div class="text-neutral-300 dark:text-neutral-700" style="font-size: 0.875rem;">
        &copy; {new Date().getFullYear()} Gauges Green
      </div>
    </div>
  </Container>
</footer>

<script>
  const themeButtons = {
    light: document.getElementById('theme-light'),
    dark: document.getElementById('theme-dark'),
    green: document.getElementById('theme-green')
  };

  function setTheme(theme: 'light' | 'dark' | 'green') {
    // Remove all theme classes
    document.documentElement.classList.remove('dark', 'green');

    // Add appropriate class
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else if (theme === 'green') {
      document.documentElement.classList.add('green');
    }

    localStorage.setItem('theme', theme);

    // Update button states (opacity)
    Object.entries(themeButtons).forEach(([key, btn]) => {
      if (btn) {
        if (key === theme) {
          btn.style.opacity = '1';
        } else {
          btn.style.opacity = '0.5';
        }
      }
    });
  }

  // Add click listeners
  themeButtons.light?.addEventListener('click', () => setTheme('light'));
  themeButtons.dark?.addEventListener('click', () => setTheme('dark'));
  themeButtons.green?.addEventListener('click', () => setTheme('green'));

  // Keyboard support
  Object.values(themeButtons).forEach(btn => {
    btn?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        (e.target as HTMLButtonElement).click();
      }
    });
  });

  // Initialize theme
  const savedTheme = localStorage.getItem('theme') as 'light' | 'dark' | 'green' | null;
  if (savedTheme && ['light', 'dark', 'green'].includes(savedTheme)) {
    setTheme(savedTheme);
  } else {
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    setTheme(prefersDark ? 'dark' : 'light');
  }

  // Language toggle
  const langToggle = document.getElementById('lang-toggle');
  const langLabel = document.getElementById('lang-label');

  function setLang(lang: string) {
    localStorage.setItem('lang', lang);
    if (langLabel) langLabel.textContent = lang === 'en' ? 'es' : 'en';

    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key && (window as any).translations?.[lang]?.[key]) {
        el.textContent = (window as any).translations[lang][key];
      }
    });

    document.querySelectorAll('[data-i18n-html]').forEach(el => {
      const key = el.getAttribute('data-i18n-html');
      if (key && (window as any).translations?.[lang]?.[key]) {
        el.innerHTML = (window as any).translations[lang][key];
      }
    });
  }

  langToggle?.addEventListener('click', () => {
    const current = localStorage.getItem('lang') || 'en';
    setLang(current === 'en' ? 'es' : 'en');
  });

  langToggle?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      langToggle.click();
    }
  });

  const savedLang = localStorage.getItem('lang') || 'en';
  setLang(savedLang);
</script>
