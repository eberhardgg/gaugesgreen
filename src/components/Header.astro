---
import Container from "@components/Container.astro";

const currentPath = Astro.url.pathname;
---

<header class="pt-12 pb-16">
  <Container>
    <div class="space-y-6">
      <!-- Brand -->
      <a
        href="/"
        class="block text-2xl font-medium tracking-tight text-black dark:text-white hover:opacity-60 transition-opacity"
      >
        Gauges Green
      </a>

      <!-- Navigation -->
      <nav class="text-sm" aria-label="Main navigation">
        <a
          href="/services"
          class:list={[
            "transition-opacity",
            currentPath === "/services"
              ? "text-black dark:text-white"
              : "text-neutral-400 dark:text-neutral-500 hover:text-black dark:hover:text-white"
          ]}
        >
          services
        </a>
        <span class="mx-3 text-neutral-300 dark:text-neutral-700" aria-hidden="true">·</span>
        <a
          href="/products"
          class:list={[
            "transition-opacity",
            currentPath === "/products"
              ? "text-black dark:text-white"
              : "text-neutral-400 dark:text-neutral-500 hover:text-black dark:hover:text-white"
          ]}
        >
          products
        </a>
        <span class="mx-3 text-neutral-300 dark:text-neutral-700" aria-hidden="true">·</span>
        <a
          href="/about"
          class:list={[
            "transition-opacity",
            currentPath === "/about"
              ? "text-black dark:text-white"
              : "text-neutral-400 dark:text-neutral-500 hover:text-black dark:hover:text-white"
          ]}
        >
          about
        </a>
        <span class="mx-3 text-neutral-300 dark:text-neutral-700" aria-hidden="true">·</span>
        <a
          href="/contact"
          class:list={[
            "transition-opacity",
            currentPath === "/contact"
              ? "text-black dark:text-white"
              : "text-neutral-400 dark:text-neutral-500 hover:text-black dark:hover:text-white"
          ]}
        >
          contact
        </a>
      </nav>
    </div>
  </Container>
</header>
