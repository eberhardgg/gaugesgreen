---
import Container from "@components/Container.astro";

const currentPath = Astro.url.pathname;
---

<header class="pt-16 pb-8">
  <Container>
    <nav class="text-sm" aria-label="Main navigation">
      <a
        href="/"
        class:list={[
          "hover:text-black dark:hover:text-white transition-colors",
          currentPath === "/" && "text-black dark:text-white"
        ]}
      >
        gauges green
      </a>
      <span class="mx-2 opacity-30" aria-hidden="true">路</span>
      <a
        href="/services"
        class:list={[
          "hover:text-black dark:hover:text-white transition-colors",
          currentPath === "/services" && "text-black dark:text-white"
        ]}
      >
        services
      </a>
      <span class="mx-2 opacity-30" aria-hidden="true">路</span>
      <a
        href="/products"
        class:list={[
          "hover:text-black dark:hover:text-white transition-colors",
          currentPath === "/products" && "text-black dark:text-white"
        ]}
      >
        products
      </a>
      <span class="mx-2 opacity-30" aria-hidden="true">路</span>
      <a
        href="/about"
        class:list={[
          "hover:text-black dark:hover:text-white transition-colors",
          currentPath === "/about" && "text-black dark:text-white"
        ]}
      >
        about
      </a>
      <span class="mx-2 opacity-30" aria-hidden="true">路</span>
      <a
        href="/contact"
        class:list={[
          "hover:text-black dark:hover:text-white transition-colors",
          currentPath === "/contact" && "text-black dark:text-white"
        ]}
      >
        contact
      </a>
    </nav>
  </Container>
</header>
