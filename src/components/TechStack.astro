---
import { SKILLS } from "../config";
import {
  Code,
  Database,
  Layout,
  Server,
  Smartphone,
  Terminal,
  Cpu,
  Globe,
  Box,
} from "lucide-astro";

const iconMap = {
  react: Code,
  astro: Cpu,
  tailwind: Layout,
  typescript: Terminal,
  "node.js": Server,
  python: Box,
  default: Globe,
};
---

<section class="py-16 px-4 max-w-4xl mx-auto">
  <h2 class="text-3xl font-bold mb-8 text-center">Tech Stack</h2>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4">
    {
      SKILLS.map((skill) => {
        const Icon =
          iconMap[skill.name.toLowerCase() as keyof typeof iconMap] ||
          iconMap.default;
        return (
          <div class="group relative p-3 md:p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-primary dark:hover:border-primary hover:shadow-[0_0_20px_rgba(59,130,246,0.3)] dark:hover:shadow-[0_0_20px_rgba(96,165,250,0.3)] transition-all duration-300 overflow-hidden">
            <div class="absolute inset-0 bg-primary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
            <div class="relative flex items-center gap-2 md:gap-3 z-10">
              <div class="p-1.5 md:p-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-primary group-hover:scale-110 transition-transform duration-300">
                <Icon class="w-5 h-5 md:w-6 md:h-6" />
              </div>
              <span class="font-medium text-sm md:text-base text-gray-700 dark:text-gray-200 truncate">
                {skill.name}
              </span>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
