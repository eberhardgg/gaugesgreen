  <div class="space-y-4">
    <a
      href="mailto:eberhard@gaugesgreen.com"
      class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
    >
      <Mail class="w-5 h-5" />
      <span>eberhard@gaugesgreen.com</span>
    </a>

    <a
      href="https://linkedin.com/in/eberhard"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
    >
      <Linkedin class="w-5 h-5" />
      <span>LinkedIn</span>
    </a>

